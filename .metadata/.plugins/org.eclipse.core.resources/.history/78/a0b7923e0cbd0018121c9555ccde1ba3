import java.util.Scanner;

public class DecisionTreeDriver {

	public static void main(String[] args) {
		Scanner rin = new Scanner(System.in);
		System.out.println("Enter training set size: ");
		int trainingSize = rin.hasNextInt() ? rin.nextInt() : 0;
		if(trainingSize <= 250 || trainingSize > 1000) {
			System.out.println("Invalid training set size - Enter a value in range 250 to 1000");
			return;
		}
		int incrementSize = rin.hasNextInt() ? rin.nextInt() : 0;
		if(incrementSize != 10 && incrementSize != 25 && incrementSize != 50) {
			System.out.println("Invalid increment size - Enter 10, 25, or 50");
			return;
		}
	}

}
